<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="userExperience"
            type="com.app.treplabs.linkedinclone.models.UserExperience" />
        <variable
            name="isLastItem"
            type="java.lang.Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/experience_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_whatsapp" />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userExperience.jobTitle}"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/experience_img"
            app:layout_constraintTop_toTopOf="@+id/experience_img" />

        <TextView
            android:id="@+id/job_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userExperience.company}"
            style="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/subText"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/job_title"
            app:layout_constraintTop_toBottomOf="@+id/job_title" />

        <TextView
            android:id="@+id/date_from_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userExperience.fromDateToDate}"
            android:textSize="14sp"
            android:textColor="@color/subText"
            app:layout_constraintStart_toStartOf="@+id/job_company"
            app:layout_constraintTop_toBottomOf="@+id/job_company" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/date_from_to"
            app:layout_constraintStart_toEndOf="@+id/date_from_to"
            app:layout_constraintTop_toTopOf="@+id/date_from_to"
            app:srcCompat="@drawable/onboarding_eclipse"
            app:tint="@color/colorBlack" />

        <TextView
            android:id="@+id/number_of_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="@{String.valueOf(userExperience.noOfYears) + ` yrs`}"
            android:textColor="@color/subText"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10"
            app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toTopOf="@+id/imageView10" />

        <View
            android:id="@+id/experience_view"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/layoutBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{isLastItem ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="@+id/job_title"
            app:layout_constraintTop_toBottomOf="@+id/date_from_to" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>